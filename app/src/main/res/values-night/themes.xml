<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile_programming" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/light_teal</item>
        <item name="actionOverflowButtonStyle">@style/ThreeDotsIcon</item>
    </style>

    <!-- Custom style for activity as a dialog. -->
    <style name="ActivityAsDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Custom style for three dots icon in action bar. -->
    <style name="ThreeDotsIcon" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/dark_gray</item>
    </style>
</resources>
